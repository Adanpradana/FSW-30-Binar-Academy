<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../components/head.ejs') %>
  </head>
  <title>dashboard</title>
  <body>
    <div class="w-100 d-flex justify-content-center text-center">
      <% if (data.alert) {%>
      <div
        id="alert"
        style="width: 300px"
        class="alert alert-success"
        role="alert"
      >
        <%= data.alert %>
      </div>
      <% } %>
    </div>
    <div class="container card card-body">
      <div
        class="container w-75 d-flex align-items-center justify-content-center flex-column"
      >
        <div class="w-75">
          <p class="container d-flex justify-content-center">
            <a
              class="btn btn-primary"
              data-bs-toggle="collapse"
              href="#collapseExample"
              role="button"
              aria-expanded="false"
              aria-controls="collapseExample"
            >
              Create Users
            </a>
          </p>
          <div class="collapse" id="collapseExample">
            <div class="card card-body">
              <form action="/api/users/create" method="post">
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label"
                    >Username</label
                  >
                  <input
                    type="text"
                    class="form-control"
                    id="exampleInputEmail1"
                    aria-describedby="emailHelp"
                    name="name"
                  />
                </div>
                <div class="mb-3">
                  <label for="exampleInputEmail1" class="form-label"
                    >Email address</label
                  >
                  <input
                    type="email"
                    class="form-control"
                    id="exampleInputEmail1"
                    aria-describedby="emailHelp"
                    name="email"
                  />
                  <div id="emailHelp" class="form-text">
                    We'll never share your email with anyone else.
                  </div>
                </div>
                <div class="mb-3">
                  <label for="exampleInputPassword1" class="form-label"
                    >Password</label
                  >
                  <input
                    type="password"
                    class="form-control"
                    id="exampleInputPassword1"
                    name="password"
                  />
                </div>
                <div class="mb-3 form-check"></div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
            </div>
          </div>
        </div>
        <br />
        <table class="table table-striped w-75">
          <tr>
            <th>#</th>
            <th>user name</th>
            <th>user email</th>
            <th>action</th>
          </tr>
          <% data.users.forEach((user,index) => {%>
          <tr>
            <td><%= index+1 %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td>
              <div class="d-flex gap-3">
                <button class="btn btn-primary text-white">
                  <a
                    style="text-decoration: none; color: white"
                    href="/users/edit/<%= user.id %>"
                  >
                    edit
                  </a>
                </button>
                <form action="api/users/remove" method="post">
                  <input type="text" hidden name="id" value="<%= user.id %>" />
                  <button type="submit" class="btn btn-danger">delete</button>
                </form>
              </div>
            </td>
          </tr>
          <% }); %>
        </table>
      </div>
    </div>
    <div>
      <form action="/auth/logout" method="get">
        <input type="submit" value="logout here" />
      </form>
    </div>
  </body>
  <script src="../assets/bootstrap/bootstrap.bundle.min.js"></script>
</html>
